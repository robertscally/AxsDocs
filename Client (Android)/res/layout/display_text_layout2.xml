<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true" 
    >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/displayTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="testing text is displayed here"
            android:paddingBottom="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
        
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    <SeekBar
        android:id="@+id/seekBar1"
        android:contentDescription="Slider bar, move left to decrease text size, right to increase text size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone" />

    
    
    <Button
        android:id="@+id/button3"
        android:focusable="true"
        android:contentDescription="Press this button to hide the slider bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="hideSlider"
        android:text="Hide slider bar"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:visibility="gone" />
    
    </RelativeLayout>
	
</RelativeLayout>